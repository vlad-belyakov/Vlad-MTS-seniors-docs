{
  "$schema": "https://json-schema.org/draft/2019-09/schema#",
  "description": "Модель сброса пароля.",
  "required": [
    "code"
  ],
  "properties": {
    "email": {
      "description": "Почта пользователя.",
      "type": "string",
      "example": "awddwd@mea.re"
    },
    "login": {
      "description": "Логин пользователя.",
      "type": "string",
      "example": "itslogin"
    },
    "code": {
      "description": "Код восстановления пароля.",
      "type": "string",
      "example": "1234"
    }
  }
}